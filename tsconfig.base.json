{
	"compilerOptions": {
		"target": "ES2021",
		"lib": ["ES2021"],
		"module": "commonjs",
		"outDir": "out",
		"sourceMap": true,
		"rootDir": "extension/src",
		"composite": true,
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"paths": {
			"@shared/*": ["./shared/src/*"]
		}
	},
	"include": [
		"extension/src",
		"./node_modules/vscode/vscode.d.ts",
		"./node_modules/vscode/lib/*"
	],
	"exclude": ["**/node_modules", ".vscode-test", "docs-site", "docs", "extension/scripts", "media", "views-ui", "audio", ".github"],
	"references": [{ "path": "./shared" }]
}
