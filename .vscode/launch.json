// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"inputs": [
		{
			"id": "cliArgs",
			"type": "promptString",
			"description": "Enter the arguments for the CLI",
			"default": ""
		}
	],
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": ["--extensionDevelopmentPath=${workspaceFolder}/extension"],
			"outFiles": ["${workspaceFolder}/extension/out/**/*.js"],
			"sourceMapPathOverrides": {
				"webpack:///./src/*": "${workspaceFolder}/extension/src/*",
				"webpack:///src/*": "${workspaceFolder}/extension/src/*",
				"webpack:///*": "${workspaceFolder}/extension/*"
			},
			"sourceMaps": true,
			"preLaunchTask": "rsbuild"
		},
		{
			"name": "Attach to LSP",
			"type": "node",
			"request": "attach",
			"port": 6009,
			"sourceMaps": true,
			"timeout": 20000,
			"restart": {
				"delay": 1000,
				"maxAttempts": 10
			},
			"sourceMapPathOverrides": {
				"webpack:///./src/*": "${workspaceFolder}/extension/src/*",
				"webpack:///src/*": "${workspaceFolder}/extension/src/*",
				"webpack:///*": "${workspaceFolder}/extension/*"
			},
			"outFiles": ["${workspaceFolder}/extension/out/**/*.js"]
		},
		{
			"name": "Debug cli",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}/cli",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "dev", "--", "${input:cliArgs}"]
		}
	],
	"compounds": [
		{
			"name": "Client + Server",
			"configurations": ["Run Extension", "Attach to LSP"]
		}
	]
}
