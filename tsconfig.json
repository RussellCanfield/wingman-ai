{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["es2020"],
		"module": "Node16",
		"moduleResolution": "Node16",
		"outDir": "out",
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"paths": {
			"@shared/*": ["./shared/src/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"],
	"references": [{ "path": "./shared" }]
}
