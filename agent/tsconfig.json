{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"target": "ES2021",
		"lib": ["ES2021"],
		"module": "commonjs",
		"outDir": "out",
		"sourceMap": true,
		"rootDir": "src",
		"baseUrl": ".",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"paths": {
			"@shared/*": ["../shared/src/*"]
		}
	},
	"include": ["src"],
	"exclude": [
		"**/node_modules",
		"/node_modules/",
		".vscode-test",
		"scripts",
		"media",
		"views-ui",
		"audio"
	],
	"references": [{ "path": "../shared" }]
}
