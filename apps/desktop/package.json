{
	"name": "@wingman-ai/desktop-companion",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"description": "Standalone Wingman desktop companion app (Tauri)",
	"scripts": {
		"dev:web": "vite",
		"build:web": "vite build",
		"test": "bun test src/lib src/*.test.ts",
		"tauri:dev": "bunx --bun @tauri-apps/cli dev",
		"tauri:build": "bunx --bun @tauri-apps/cli build",
		"tauri:build:windows:x64": "bunx --bun @tauri-apps/cli build --target x86_64-pc-windows-msvc --bundles msi,nsis",
		"publish:macos": "bash ./scripts/macos-publish.sh all",
		"publish:macos:help": "bash ./scripts/macos-publish.sh --help",
		"publish:windows": "pwsh -NoProfile -File ./scripts/windows-publish.ps1 all",
		"publish:windows:help": "pwsh -NoProfile -File ./scripts/windows-publish.ps1 help"
	},
	"devDependencies": {
		"@tailwindcss/vite": "^4.1.18",
		"@tauri-apps/cli": "^2.3.1",
		"@types/react": "^19.2.13",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.3",
		"tailwindcss": "^4.1.18",
		"vite": "^7.3.1"
	},
	"dependencies": {
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"react-router-dom": "^7.13.0",
		"recharts": "^3.7.0"
	}
}
