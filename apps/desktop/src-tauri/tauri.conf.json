{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Wingman Companion",
	"version": "0.3.0",
	"identifier": "ai.wingman.desktop",
	"build": {
		"beforeDevCommand": "bun run dev:web",
		"devUrl": "http://127.0.0.1:1420",
		"beforeBuildCommand": "bun run build:web",
		"frontendDist": "../dist"
	},
	"app": {
		"macOSPrivateApi": true,
		"windows": [
			{
				"label": "main",
				"title": "Wingman Companion",
				"width": 1240,
				"height": 860,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"macOS": {
			"infoPlist": "Info.plist"
		}
	}
}
